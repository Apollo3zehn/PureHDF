{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-benchmark",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-c",
                "Release",
                "${workspaceFolder}/benchmarks/PureHDF.Benchmarks/PureHDF.Benchmarks.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-async-benchmark",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-c",
                "Release",
                "${workspaceFolder}/benchmarks/PureHDF.AsyncBenchmark/PureHDF.AsyncBenchmark.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "tests: common",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "--filter",
                "FullyQualifiedName!~PureHDF.Tests.Writing & FullyQualifiedName!~PureHDF.Tests.Filters & FullyQualifiedName!~PureHDF.Tests.Reading.VOL.HsdsTests"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "tests: writing",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "--filter",
                "FullyQualifiedName~PureHDF.Tests.Writing"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "tests: filters",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "--filter",
                "FullyQualifiedName~PureHDF.Tests.Filters"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "tests: HSDS",
            "command": "bash",
            "type": "process",
            "args": [
                "tests/PureHDF.Tests/Reading/PureHDF.VOL/run-hsds-tests.sh"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}