<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Enables hardware accelerated Blosc filter support for PureHDF.</Description>
    <PackageTags>HDF HDF5 hierarchical data file H5 Blosc Blosc2</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <TargetFrameworks>net6.0;netstandard2.1</TargetFrameworks>
    <PackageIcon>nuget.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../src/PureHDF/PureHDF.csproj" Version="$(Version)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Blosc2.PInvoke" Version="2.7.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../doc/images/nuget.png" Pack="true" PackagePath="/" />
    <None Include="../../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
